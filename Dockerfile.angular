# Build stage for Angular only
FROM node:20-alpine AS builder

WORKDIR /app

# Build Angular app
COPY package*.json ./
RUN npm install
COPY . .
# Exclude chat directory and build Angular
RUN npm run build --configuration=production

# Production stage
FROM nginx:alpine

# Copy Angular build
COPY --from=builder /app/dist/conductor-app/browser /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]